<Page x:Class="Amalgama.View.Pages.MasterRemoveTatoo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Amalgama.View.Pages"
      mc:Ignorable="d" 
      Background="#F3F3F3"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MasterRemoveTatoo">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="35"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="85"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Canvas>
                <StackPanel Orientation="Horizontal"
                            Panel.ZIndex="2"
                            Grid.Column="1"
                            Grid.Row="0"
                            Canvas.Left="18"
                            Canvas.Top="0">
                    <Border x:Name="ArrowBut"
                        MouseDown="ArrowBut_MouseDown"
                        Style="{StaticResource ArrowBackbutton}"
                        HorizontalAlignment="Left"
                        Margin="15 15 0 0">
                        <Image Source="/Images/ArrowBackButton.png" 
                               Stretch="Uniform"/>
                    </Border>
                </StackPanel>
            </Canvas>
            <Border Grid.Column="0" Grid.RowSpan="5">
                <Border.Effect>
                    <BlurEffect Radius="-2"/>
                </Border.Effect>
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                        <GradientStop Color="#404040" Offset="0.0"/>
                        <GradientStop Color="#707070" Offset="0.02"/>
                        <GradientStop Color="#A0A0A0" Offset="0.05"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border Grid.Column="3" Grid.RowSpan="5">
                <Border.Effect>
                    <BlurEffect Radius="-2"/>
                </Border.Effect>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#404040" Offset="0.0"/>
                        <GradientStop Color="#707070" Offset="0.02"/>
                        <GradientStop Color="#A0A0A0" Offset="0.05"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Grid Grid.Column="3">
                <Image x:Name="CloseButton"
                       MouseDown="Closer_MouseDown"
                       Source="/Images/Closed.png"
                       Height="15"
                       Width="15"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"/>
            </Grid>

            <!-- Фоновое изображение -->
            <Image Source="/Images/MastersPersonalDate/MasterBackground.png" 
                   Panel.ZIndex="-1"
                   Height="550"
                   Width="400"
                   x:Name="AnimatedBack"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Grid.RowSpan="2"
                   Grid.Column="1"/>

            <!-- Изображение слева -->
            <Grid Grid.Column="1" Grid.Row="1">
                <Image Source="/Images/MastersPersonalDate/MasterArisha.png" 
                       Height="460"
                       Width="350"
                       Stretch="Uniform"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="25,10,0,0"
                       x:Name="ImgAnimated"
                       Panel.ZIndex="1">
                    <Image.RenderTransform>
                        <TranslateTransform Y="0" X="0"/>
                    </Image.RenderTransform>
                </Image>
            </Grid>
            <!-- Текст справа -->
            <Grid Grid.Column="2" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="250"/>
                </Grid.RowDefinitions>
                <!-- Заголовок и основной текст -->
                <Border Background="Transparent" 
                        Grid.Row="0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <TextBlock x:Name="TxtWriteTitle"
                                       Style="{StaticResource OtherTxt}"
                                       TextWrapping="Wrap"
                                       FontSize="25"
                                       VerticalAlignment="Top"
                                       MaxHeight="75" 
                                       Margin="0,10,0,0"/>
                            <TextBlock x:Name="TxtWrite"
                                       Style="{StaticResource OtherTxt}"
                                       TextWrapping="Wrap"
                                       FontSize="25"
                                       VerticalAlignment="Top"
                                       MaxHeight="500" 
                                       Margin="0,60,0,65"/>
                        </Grid>
                    </ScrollViewer>
                </Border>
                <Border Grid.Row="2"
                        Grid.Column="2"
                        x:Name="AnimatedBRD"
                        VerticalAlignment="Top">
                    <Border.RenderTransform>
                        <TranslateTransform Y="50"/>
                    </Border.RenderTransform>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="TxtWriteTitle2"
                                   Grid.Row="0"
                                   Style="{StaticResource OtherTxt}"
                                   TextWrapping="Wrap"
                                   FontSize="25"
                                   VerticalAlignment="Center"
                                   MaxHeight="75" 
                                   TextAlignment="Center"
                                   Margin="0 -105 150 0"
                                   HorizontalAlignment="Center"
                                   Grid.ColumnSpan="3"/>
                        <Border Grid.Column="0"
                                Height="55"
                                Width="210"
                                Grid.Row="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" 
                                              Direction="-90" 
                                              ShadowDepth="4" 
                                              Opacity="0.2" 
                                              BlurRadius="8"/>
                            </Border.Effect>
                            <Border BorderBrush="Gray"
                                    BorderThickness="0.35"
                                    Background="#F3F3F3"
                                    Padding="0,0,8,4">
                                <TextBlock Text="Качество"
                                           FontSize="18"
                                           Style="{StaticResource Content}" 
                                           TextAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Border>
                        <Border Grid.Column="1"
                                Height="55"
                                Width="210"
                                Grid.Row="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" 
                                                  Direction="-90" 
                                                  ShadowDepth="4" 
                                                  Opacity="0.2" 
                                                  BlurRadius="8"/>
                            </Border.Effect>
                            <Border BorderBrush="Gray"
                                    BorderThickness="0.35"
                                    Background="#F3F3F3"
                                    Padding="0,0,8,4">
                                <TextBlock Text="Коммуникабельность"
                                           FontSize="18"
                                           Style="{StaticResource Content}" 
                                           TextAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Border>
                        <Border Grid.Column="2"
                                Height="55"
                                Width="210"
                                Grid.Row="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" 
                                                  Direction="-90" 
                                                  ShadowDepth="4" 
                                                  Opacity="0.2" 
                                                  BlurRadius="8"/>
                            </Border.Effect>
                            <Border BorderBrush="Gray"
                                    BorderThickness="0.35"
                                    Background="#F3F3F3"
                                    Padding="0,0,8,4">
                                <TextBlock Text="Опыт"
                                           FontSize="18"
                                           Style="{StaticResource Content}" 
                                           TextAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Border>
                        <Button Style="{StaticResource ButtonSt1}"
                                Grid.Row="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Grid.ColumnSpan="3"
                                Content="Записаться"
                                x:Name="RecButtom"
                                Click="RecButtom_Click"
                                Margin="0 25 0 0"/>
                    </Grid>
                </Border>
            </Grid>
            <Border Grid.Row="4"
           Grid.ColumnSpan="2"
           VerticalAlignment="Bottom"
           Grid.Column="1">
                <StackPanel VerticalAlignment="Bottom">
                    <UniformGrid x:Name="GalleryGrid" 
            Columns="4">
                        <!-- Здесь будут добавляться изображения -->
                    </UniformGrid>
                    <Button x:Name="AddImageButton" 
                   Content="+" 
                   Click="AddImage_Click" 
                   Background="#C1C1C1" 
                   BorderBrush="#FFFFFF" 
                   Foreground="#FFFFFF" 
                   FontSize="25" 
                   Height="185" 
                   Width="185" 
                   Margin="10" 
                   HorizontalAlignment="Right"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
