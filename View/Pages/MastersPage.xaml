<Page x:Class="Amalgama.View.Pages.MastersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Amalgama.View.Pages"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      Background="Transparent"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MastersPage">
    <Border>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Color="#AFAEAE" Offset="0.0"/>
                        <GradientStop Color="#DCDCDC" Offset="0.25"/>
                        <GradientStop Color="#DCDCDC" Offset="0.5"/>
                        <GradientStop Color="#DCDCDC" Offset="0.75"/>
                        <GradientStop Color="#F2F2F2" Offset="1.0"/>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="35"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0.5" EndPoint="0.5,0.5">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Color="#B8B8B8" Offset="0.15"/>
                            <GradientStop Color="#DCDCDC" Offset="1.95"/>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Grid.Background>
            </Grid>
            <Grid Grid.Column="4">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0.5" EndPoint="0.5,0.5">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Color="#B8B8B8" Offset="0.15"/>
                            <GradientStop Color="#DCDCDC" Offset="1.95"/>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Grid.Background>
                <Image x:Name="Close"
                       MouseDown="Close_MouseDown"
                       Source="/Images/Closed.png"
                       Height="15"
                       Width="15"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"
                      Panel.ZIndex="-3">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Left">
                        <Border x:Name="ArrowButton"
                               MouseDown="ArrowButton_MouseDown"
                               Style="{StaticResource ArrowBackbutton}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="15 15 0 0">
                            <Image Source="/Images/ArrowBackButton.png" 
                                   Stretch="Uniform"/>
                        </Border>
                        <Canvas VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock Text="Мастера"
                                   FontWeight="ExtraBold"
                                   FontSize="25"
                                   Style="{StaticResource OtherTitle}"
                                   Canvas.Left="35"
                                   Canvas.Bottom="-18"                    />
                        </Canvas>
                    </StackPanel>
                </Grid>
                <Image x:Name="BackgroundImage" 
                        Source="/Images/mastersBackground.jpg" 
                        Height="375"
                        Width="480"
                        Stretch="Fill"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top" 
                        Opacity="0"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Panel.ZIndex="-2">
                    <Image.RenderTransform>
                        <TranslateTransform Y="-350" />
                    </Image.RenderTransform>
                </Image>
                <Grid x:Name="ContentGrid" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Top"
                      Grid.Row="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock x:Name="HeaderText" 
                                   Text="Наши мастера" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Top" 
                                   Margin="0 25 0 0"
                                   Style="{StaticResource TextLogin}" 
                                   Opacity="0">
                            <TextBlock.RenderTransform>
                                <TranslateTransform Y="-75" />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <StackPanel HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    Margin="20 15 0 0" 
                                    Width="285">
                            <TextBlock x:Name="Txt1_Line1" 
                                       Text="Команда профессионалов" 
                                       Style="{StaticResource TextLogin}" 
                                       Opacity="0" 
                                       TextAlignment="Left" 
                                       Margin="0 0 0 5">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform Y="-75" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock x:Name="Txt1_Line2" 
                                       Text="принимается за дело" 
                                       Style="{StaticResource TextLogin}" 
                                       Opacity="0" 
                                       TextAlignment="Center"
                                       Margin="20 0 0 0">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform Y="-75" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <Grid x:Name="MyGrid"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Grid.Row="1"
                           Height="Auto"
                           Margin="0 210 0 0">  
                        <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*" />
                             <ColumnDefinition Width="*" />
                             <ColumnDefinition Width="*" />  
                        </Grid.ColumnDefinitions>
     <Image Source="/Images/MastersPersonalDate/MasterMaria.jpg"
                Grid.Column="0"
                Height="630" Width="260"
                Stretch="Uniform"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0 45 10 0"
                MouseEnter="Image_MouseEnter"
                MouseLeave="Image_MouseLeave"
                Visibility="Collapsed"
                RenderTransformOrigin="0.5, 0.5"
                x:Name="MasterTatoo"
            MouseDown="MasterTatoo_MouseDown">
             <Image.Clip>
                 <RectangleGeometry Rect="0,0,0,0" />
             </Image.Clip>
             <Image.RenderTransform>
                 <TransformGroup>
                     <ScaleTransform ScaleX="1" ScaleY="1" />
                     <TranslateTransform Y="0" />
                 </TransformGroup>
             </Image.RenderTransform>
         </Image>
     <TextBlock Text="Тату"
                Grid.Column="0"
                TextAlignment="Right"
                x:Name="Text0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Style="{StaticResource OtherTxt}" 
                Margin="0 0 0 -105"/>

     <Image Source="/Images/MastersPersonalDate/MasterArisha.png"
                Grid.Column="1"
                Height="675" Width="305"
                Stretch="Uniform"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="50 -45 0 0"
                MouseEnter="Image_MouseEnter"
                MouseLeave="Image_MouseLeave"
                Visibility="Collapsed"
                RenderTransformOrigin="0.5, 0.5"
                x:Name="MasterDeleteTatoo"
            MouseDown="MasterDeleteTatoo_MouseDown">
             <Image.Clip>
                 <RectangleGeometry Rect="0,0,0,0" />
             </Image.Clip>
             <Image.RenderTransform>
                 <TransformGroup>
                     <ScaleTransform ScaleX="1" ScaleY="1" />
                     <TranslateTransform Y="0" />
                 </TransformGroup>
             </Image.RenderTransform>
         </Image>
     <TextBlock Text="Тату"
                Grid.Column="1"
                TextAlignment="Center"
                Margin="0 0 0 -105"
                x:Name="Text2"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Style="{StaticResource OtherTxt}" />

     <Image Source="/Images/MastersPersonalDate/MasterAngelina.png"
                Grid.Column="2"
                Height="635" Width="270"
                Stretch="Uniform"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="50 45 0 0"
                MouseEnter="Image_MouseEnter"
                MouseLeave="Image_MouseLeave"
                Visibility="Collapsed"
                RenderTransformOrigin="0.5, 0.5"
                x:Name="MasterPirc"
            MouseDown="MasterPirc_MouseDown">
             <Image.Clip>
                 <RectangleGeometry Rect="0,0,0,0" />
             </Image.Clip>
             <Image.RenderTransform>
                 <TransformGroup>
                     <ScaleTransform ScaleX="1" ScaleY="1" />
                     <TranslateTransform Y="0" />
                 </TransformGroup>
             </Image.RenderTransform>
         </Image>
     <TextBlock Text="Тату"
                Grid.Column="2"
                TextAlignment="Center"
               Margin="0 0 0 -105"
                x:Name="Text3"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Style="{StaticResource OtherTxt}" />
 </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>

