<Page x:Class="Amalgama.View.Pages.Gallery"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Amalgama.View.Pages"
      mc:Ignorable="d" 
      Background="#F3F3F3"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Gallery">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="35"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Canvas>
                <StackPanel Orientation="Horizontal"
                            Panel.ZIndex="2"
                            Grid.Column="1"
                            Grid.Row="0"
                            Canvas.Left="18"
                            Canvas.Top="0"> 
                    <Border x:Name="ArrowBut"
                            MouseDown="ArrowBut_MouseDown"
                            Style="{StaticResource ArrowBackbutton}"
                            HorizontalAlignment="Left"
                            Margin="15 15 0 0">
                        <Image Source="/Images/ArrowBackButton.png" 
                       Stretch="Uniform"/>
                    </Border>
                </StackPanel>
            </Canvas>
            <Border Grid.Column="0" Grid.RowSpan="10">
                <Border.Effect>
                    <BlurEffect Radius="-2"/>
                </Border.Effect>
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                        <GradientStop Color="#404040" Offset="0.0"/>
                        <GradientStop Color="#707070" Offset="0.02"/>
                        <GradientStop Color="#A0A0A0" Offset="0.05"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border Grid.Column="3" Grid.RowSpan="10">
                <Border.Effect>
                    <BlurEffect Radius="-2"/>
                </Border.Effect>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#404040" Offset="0.0"/>
                        <GradientStop Color="#707070" Offset="0.02"/>
                        <GradientStop Color="#A0A0A0" Offset="0.05"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Grid Grid.Column="3">
                <Image x:Name="CloseButton"
                   MouseDown="CloseButton_MouseDown"
                   Source="/Images/Closed.png"
                   Height="15"
                   Width="15"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="1"
                  Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <Button Style="{StaticResource ButtonSt1}"
                            Content="Тату"
                            x:Name="Tatoo"
                            Click="Tatoo_Click"/>
                    <Button Style="{StaticResource LightButton2}"
                            Content="Пирсинг"
                            x:Name="Pirc"
                            Click="Pirc_Click"/>
                </StackPanel>
            </Grid>
            <StackPanel VerticalAlignment="Top"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="2">
                <UniformGrid x:Name="GalleryGrid" 
                             Columns="4" 
                             Margin="10">
                </UniformGrid>
                <Button x:Name="AddImageButton"
                        Content="+" 
                        Click="AddImageButton_Click"
                        Background="#C1C1C1"
                        BorderBrush="#FFFFFF"
                        Foreground="#FFFFFF"
                        FontSize="25"
                        Height="185"
                        Width="185"
                        Margin="10"
                        HorizontalAlignment="Right"
                        Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
