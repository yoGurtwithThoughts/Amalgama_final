<Page x:Class="Amalgama.View.Pages.QwestionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Amalgama.View.Pages"
      mc:Ignorable="d" 
      Background="#F3F3F3"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QwestionsPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="750"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0"
                Grid.Column="1">
            <StackPanel Orientation="Horizontal"
                    Panel.ZIndex="2"
                    Grid.Column="1"
                    Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="365">
                <Border x:Name="ArrowBut"
                        Grid.Column="2"
                        MouseDown="ArrowBut_MouseDown"
                        Style="{StaticResource ArrowBackbutton}"
                        Margin="15 15 0 0" Width="187">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="288">
                        <Image Source="/Images/ArrowBackButton.png"
                               Width="18"/>
                        <TextBlock Text="Частые вопросы"
                                   Panel.ZIndex="3"
                                   Grid.Row="0"
                                   FontSize="25"
                                   Style="{StaticResource OtherTxt}"
                                   Margin="15 0 0 0" Width="262"/>
                        <!-- Уменьшен отступ слева -->
                    </StackPanel>
                </Border>
            </StackPanel>
        </Canvas>
        <Border Grid.Column="0" Grid.RowSpan="6">
            <Border.Effect>
                <BlurEffect Radius="-2"/>
            </Border.Effect>
            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                    <GradientStop Color="#404040" Offset="0.0"/>
                    <GradientStop Color="#707070" Offset="0.02"/>
                    <GradientStop Color="#A0A0A0" Offset="0.05"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border Grid.Column="3" Grid.RowSpan="6">
            <Border.Effect>
                <BlurEffect Radius="-2"/>
            </Border.Effect>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#404040" Offset="0.0"/>
                    <GradientStop Color="#707070" Offset="0.02"/>
                    <GradientStop Color="#A0A0A0" Offset="0.05"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid Grid.Column="3">
            <Image x:Name="CloseButton"
               MouseDown="CloseButton_MouseDown"
               Source="/Images/Closed.png"
               Height="15"
               Width="15"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"/>
        </Grid>
        <Border Grid.Column="0" Grid.RowSpan="5">
            <Border.Effect>
                <BlurEffect Radius="-2"/>
            </Border.Effect>
            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                    <GradientStop Color="#404040" Offset="0.0"/>
                    <GradientStop Color="#707070" Offset="0.02"/>
                    <GradientStop Color="#A0A0A0" Offset="0.05"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border Grid.Column="3" Grid.RowSpan="5">
            <Border.Effect>
                <BlurEffect Radius="-2"/>
            </Border.Effect>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#404040" Offset="0.0"/>
                    <GradientStop Color="#707070" Offset="0.02"/>
                    <GradientStop Color="#A0A0A0" Offset="0.05"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid Grid.Row="1"
      Grid.Column="1">
            <StackPanel Margin="35 15 0 0">
                <TextBlock Style="{StaticResource ContentTitle}"
                           FontSize="25"
                   Text="Долго заживает?"/>
                <TextBox VerticalContentAlignment="Center"
                         Style="{StaticResource TextBoxStyle}"
                         BorderBrush="#959595"
                         BorderThickness="0 0 0 2" 
                         Height="50"
                         FontSize="20"
                         Margin="45 15 0 0"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2"
              Grid.Column="1">
            <StackPanel Margin="35 15 0 0">
                <TextBlock Style="{StaticResource  ContentTitle}"
                           FontSize="25"
               Text="Сильно больно?"/>
            </StackPanel>
            <TextBox VerticalContentAlignment="Center"
                     Style="{StaticResource TextBoxStyle}"
                     BorderBrush="#959595"
                     BorderThickness="0 0 0 2" 
                     Height="50"
                     Margin="65 15 0 0"
                     FontSize="20"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="3"
      Grid.Column="1">
            <StackPanel Margin="35 15 0 0">
                <TextBlock Style="{StaticResource  ContentTitle}"
                           FontSize="25"
               Text="Нет 18 лет?"/>
            </StackPanel>
            <TextBox VerticalContentAlignment="Center"
                     Style="{StaticResource TextBoxStyle}"
                     BorderBrush="#959595"
                     BorderThickness="0 0 0 2" 
                     Height="50"
                     FontSize="20"
                     Margin="65 15 0 0"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="4"
      Grid.Column="1">
            <StackPanel Margin="35 15 0 0">
                <TextBlock Style="{StaticResource  ContentTitle}"
                           FontSize="25"
               Text="Сколько стоит?"/>
            </StackPanel>
            <TextBox VerticalContentAlignment="Center"
                     Style="{StaticResource TextBoxStyle}"
                     BorderBrush="#959595"
                     BorderThickness="0 0 0 2" 
                     Height="85"
                     FontSize="20"
                     Margin="65 5 0 0"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Bottom"/>
        </Grid>
            <Image Source="/Images/infobanner.jpg"
                   Grid.Column="2"
                   Grid.RowSpan="6"
                   Stretch="Uniform"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>

    </Grid>
</Page>
